extends ./layout/layout
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                blockquote.text-center Lee Sobre Nuestros Clientes y sus Experiencias
                include ./partials/testimoniales
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                    
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales",method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(type="text", placeholder="Nombre",name="nombre",id="nombre", class="form-control",value=nombre)
                            .form-group
                                label(for="correo") Correo Electr√≥nico
                                input(type="email", placeholder="correo",name="correo",id="correo", class="form-control",value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3", placeholder="Mensaje", class="form-control")= mensaje
                            input(type="submit", value="Enviar",class="btn btn-success btn-block")